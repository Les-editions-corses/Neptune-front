<div class="diapo_fin flex{{ (zone.prio == 0) ? ' first' : '' }}">
    <div class="mw35 left text_right relative flex align_content_right apparition apparition_left">
        <div class="box relative">
            <img src="{{ asset('img/logo_diapo.png') }}" alt="Logo Omega Corse" class="block absolute top0 h100"/>
        </div>
    </div>
    <div class="w60 right apparition apparition_right">
        {% for photo in zone.photos %}
            <div class="photo relative" data-id="{{ photo.id }}">
                <span class="flex justify_center absolute left0 top0 w100 h100">
                    <img src="{{ asset('uploads/'~ photo.path) | thumb(1000) }}" alt="{{ zone.name }}" class="object-fit"/>
                </span>
            </div>
        {% endfor %}
    </div>
    <a href="#" class="adherer">{{ 'Adh√©rer' | trans }}</a>
</div>
